<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ActivityLinear">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity= "center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="369dp"
                android:layout_height="217dp"
                android:src="@drawable/cifp_logo" />

            <TextView
                android:id="@+id/tNombre"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Nombre" />

            <EditText
                android:id="@+id/eNombre"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:ems="10"
                android:hint="Tu nombre"
                android:inputType="text"
                android:drawableStart="@drawable/person_24"

                />
            <TextView
                android:id="@+id/tCorreo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:textSize="20dp"

                android:text="Tu Correo" />

            <EditText
                android:id="@+id/eCorreo"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:ems="10"
                android:hint="Tu correo"
                android:inputType="text"
                android:drawableStart="@drawable/email_24"

                />
            <TextView
                android:id="@+id/tPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Contraseña" />

            <EditText
                android:id="@+id/ePassword"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Contraseña"
                android:drawableStart="@drawable/lock_24"
                 />

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="100dp"
                android:layout_weight="1"
                android:text="Submit"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/volver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:onClick="volver"
                android:text="Volver" />


        </LinearLayout>

    </LinearLayout>




</LinearLayout>